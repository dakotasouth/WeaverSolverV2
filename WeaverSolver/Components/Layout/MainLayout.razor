@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="app-bar">
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Title="GitHub" Edge="Edge.End" Href="https://github.com/dakotasouth" Target="_blank" />
        <MudSpacer />
        <MudText Typo="Typo.h4" Class="title">Weaver Solver</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Grid4x4" Edge="Edge.End" Href="https://wordwormdormdork.com/" Target="_blank"/>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>



<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{
    private readonly MudTheme _currentTheme = new()
    {
        Palette = new PaletteLight()
        {
            AppbarBackground = "#FFFFFF",
        },
    };
}
